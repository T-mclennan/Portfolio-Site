{
  "name": "portfolio-site",
  "version": "1.0.0",
  "description": "Tristan's Portfolio Site",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-install": "npm install --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/T-mclennan/Portfolio-Site.git"
  },
  "author": "Tristan Mclennan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/T-mclennan/Portfolio-Site/issues"
  },
  "homepage": "https://github.com/T-mclennan/Portfolio-Site#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "concurrently": "^5.0.2",
    "express": "^4.18.2"
  }
}
